bindsym XF86AudioLowerVolume    exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -05%
bindsym XF86AudioMute                   exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle

